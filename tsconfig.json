{
    "compileOnSave": true,
    "compilerOptions": {
        "noImplicitAny": true,
        "inlineSourceMap": true,
        "noImplicitReturns": true,
        "strict": true,
        "target": "ES6",
        "moduleResolution": "node",
        "outDir": "build/js"
    },
    "include": [
        "src/ts/**/*.ts", "src/main.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}